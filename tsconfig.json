{
	"include": ["**/*.ts"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"moduleDetection": "force",
		"noEmit": true,

		"strict": true,
		"noUncheckedIndexedAccess": true
	}
}
